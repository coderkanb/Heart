<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 底部导航栏 -->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:button="@null"-->
    <!--android:textSize="12sp"-->
    <style name="style_app_bottom_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/selector_tab_text_color</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="style_fine_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/app_gray</item>
    </style>

    <style name="style_mall_entry_bar">
        <item name="android:layout_width">@dimen/mall_entry_bar_width</item>
        <item name="android:layout_height">@dimen/mall_entry_bar_height</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
